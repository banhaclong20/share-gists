<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <i class="ion-plus-round mr-2"></i>Add Gist
        </div>
    <div class="card-body">
        <form action="/gists" method="post">
            <div class="form-group">
                <label for="description">Gist Description</label>
                <input type="text" name="description" class="form-control">
            </div>
            <div class="form-group">
                <label for="status">Status</label>
                <select class="form-control" name="status">
                <option value="public" selected>Public</option>
                <option value="private">Private</option>
                <option value="unpublished">Unpublished</option>
                </select>
            </div>
            <div class="form-group">
                <label>Gist Content</label>
                <textarea class="form-control" name="contents" rows="15"></textarea>
            </div>

            <input type="submit" class="btn btn-primary btn-block" value="Add Gist">
        </form>
    </div>    
</div>
<div class="mt-4"></div>