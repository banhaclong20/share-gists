<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <i class="ion-android-create mr-2"></i>Edit Gist
        </div>
    <div class="card-body">
        <form action="/gists/{{gist.id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <label for="description">Gist Description</label>
                <input type="text" name="description" class="form-control" value="{{gist.description}}">
            </div>
            <div class="form-group">
                <label for="status">Status</label>
                <select class="form-control" name="status">
                    {{#select gist.status}}
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                        <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
            </div>
            <div class="form-group">
                <label>Gist Content</label>
                <textarea class="form-control" name="contents" rows="15">{{gist.contents}}</textarea>
            </div>

            <input type="submit" class="btn btn-dark btn-block" value="Update Gist">
        </form>
    </div>    
</div>
<div class="mt-4"></div>